<div>
  <label for='ds-cut-grade-slider' class='tw-block tw-text-base tw-font-medium tw-text-gray-700 tw-mb-2'
    >Slipkvalitet</label
  >
  <div class='tw-relative'>
    <div
      id='ds-cut-grade-images'
      class='tw-absolute tw-bottom-full tw-left-0 tw-right-0 tw-bg-white tw-border tw-border-gray-200 tw-rounded-md tw-shadow-md tw-p-3 tw-mb-2 tw-opacity-0 tw-pointer-events-none tw-transition-opacity tw-duration-300 tw-z-10'
    >
      <img
        src='{{ 'cut.jpg' | asset_url }}'
        alt='Cut grade reference'
        class='tw-w-full tw-h-auto tw-rounded-sm'
        width='400'
        height='200'
      >
    </div>

    <div id='ds-cut-grade-slider-noui' class='tw-mt-8'></div>

    <div class='label-container tw-flex tw-mt-4 tw-text-sm tw-text-gray-500' id='ds-cut-grade-labels'>
      {% assign cut_grades = 'Good,Very Good,Excellent' | split: ',' %}
      {% for grade in cut_grades %}
        <span class='tw-flex-1 tw-text-center'>{{ grade }}</span>
      {% endfor %}
    </div>
  </div>
</div>
