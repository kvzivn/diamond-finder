<div>
  <div class='tw-relative tw-mb-4'>
    <label for='ds-colour-tabs' class='tw-block tw-text-base tw-font-medium tw-text-gray-700'>FÃ¤rg</label>

    <!-- Tab buttons positioned absolutely -->
    <div class='tw-absolute tw-top-0 tw-right-0 tw-flex tw-gap-2 tw-rounded-full tw-w-40'>
      <button
        type='button'
        id='ds-colour-tab-white'
        class='tw-flex-1 tw-px-1.5 tw-py-1 tw-rounded-full tw-text-sm tw-font-medium tw-transition-all tw-duration-200 focus:tw-outline-none data-[active="true"]:tw-bg-slate-200 data-[active="true"]:tw-text-black data-[active="false"]:tw-text-slate-700 data-[active="false"]:hover:tw-bg-gray-100 data-[active="false"]:hover:tw-text-black'
        data-tab='white'
        data-active='true'
        aria-pressed='true'
      >
        Vita
      </button>
      <button
        type='button'
        id='ds-colour-tab-fancy'
        class='tw-flex-1 tw-px-1.5 tw-py-1 tw-rounded-full tw-text-sm tw-font-medium tw-transition-all tw-duration-200 focus:tw-outline-none data-[active="true"]:tw-bg-slate-200 data-[active="true"]:tw-text-black data-[active="false"]:tw-text-slate-700 data-[active="false"]:hover:tw-bg-gray-100 data-[active="false"]:hover:tw-text-black'
        data-tab='fancy'
        data-active='false'
        aria-pressed='false'
      >
        Fancy
      </button>
    </div>
  </div>

  <!-- White colour panel -->
  <div id='ds-colour-panel-white' class='tw-relative' data-panel='white'>
    <div
      id='ds-colour-images'
      class='tw-absolute tw-bottom-full tw-left-0 tw-right-0 tw-bg-white tw-border tw-border-gray-200 tw-rounded-md tw-shadow-md tw-p-3 tw-mb-2 tw-opacity-0 tw-pointer-events-none tw-transition-opacity tw-duration-300 tw-z-10'
    >
      <img
        src='{{ 'color.jpg' | asset_url }}'
        alt='Color reference'
        class='tw-w-full tw-h-auto tw-rounded-sm'
        width='400'
        height='200'
      >
    </div>

    <div id='ds-colour-slider-noui' class='tw-mt-8'></div>

    <div class='label-container tw-flex tw-mt-4 tw-text-sm tw-text-gray-500' id='ds-colour-labels'>
      {% assign color_grades_for_labels = 'K,J,I,H,G,F,E,D' | split: ',' %}
      {% for grade_label in color_grades_for_labels %}
        <span class='tw-flex-1 tw-text-center'>{{ grade_label }}</span>
      {% endfor %}
    </div>
  </div>

  <div id='ds-colour-panel-fancy' class='tw-hidden' data-panel='fancy'>
    <!-- Fancy color buttons -->
    <div class='tw-mb-6'>
      {% render 'fancy-filter-button-group',
        group_id: 'ds-fancy-colour',
        options_str: 'Pink:pink|Yellow:yellow|Blue:blue|Red:red|Green:green|Purple:purple|Orange:orange|Violet:violet|Gray:gray|Black:black|Brown:brown|Cognac:cognac|White:white|S & P:s-and-p|Other:other',
        multiselect: 'true'
      %}
    </div>

    <div class='tw-mt-6'>
      <label for='ds-colour-tabs' class='tw-block tw-text-base tw-font-medium tw-text-gray-700'>Intesitet</label>
      <div id='ds-fancy-intensity-slider' class='tw-mt-8'></div>
      <div class='label-container tw-flex tw-mt-4 tw-text-sm tw-text-gray-500' id='ds-fancy-intensity-labels'>
        {% assign intensity_labels = 'Light,Fancy,Intense,Vivid,Deep,Dark' | split: ',' %}
        {% for intensity_label in intensity_labels %}
          <span class='tw-flex-1 tw-text-center tw-text-xs'>{{ intensity_label }}</span>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
