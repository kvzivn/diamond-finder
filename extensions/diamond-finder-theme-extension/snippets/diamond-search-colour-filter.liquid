<div>
  <label for="ds-colour-slider" class="tw-block tw-text-base tw-font-medium tw-text-gray-700 tw-mb-2">FÃ¤rg</label>
  <div class="tw-relative">
    <div id="ds-colour-images" class="tw-absolute tw-bottom-full tw-left-0 tw-right-0 tw-flex tw-justify-between tw-items-end tw-bg-white tw-border tw-border-gray-200 tw-rounded-md tw-shadow-md tw-p-3 tw-mb-2 tw-opacity-0 tw-pointer-events-none tw-transition-opacity tw-duration-300 tw-z-10">
      {% assign color_grades_for_images = "K,J,I,H,G,F,E,D" | split: ',' %}
      {% for grade_img_filename in color_grades_for_images %}
        <div class="tw-text-center">
          <img src="{{ '/' | append: grade_img_filename | append: '.jpg' | asset_url }}" alt="{{ grade_img_filename }} color" class="tw-mx-auto tw-h-12 tw-w-auto tw-rounded-sm" width="48" height="48">
        </div>
      {% endfor %}
    </div>

    <div id="ds-colour-slider-noui" class="tw-mt-8"></div>

    <div class="label-container tw-flex tw-mt-4 tw-text-sm tw-text-gray-500" id="ds-colour-labels">
      {% assign color_grades_for_labels = "K,J,I,H,G,F,E,D" | split: ',' %}
      {% for grade_label in color_grades_for_labels %}
      <span class="tw-flex-1 tw-text-center">{{ grade_label }}</span>
      {% endfor %}
    </div>
  </div>
</div>