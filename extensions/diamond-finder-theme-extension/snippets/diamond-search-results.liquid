<!-- Diamond Search Results Section -->
<div id='diamond-search-header' class='tw-flex tw-justify-between tw-items-center tw-mb-4 tw-hidden'>
  <p class='tw-text-base tw-text-gray-700'>Resultat - <span id='ds-results-count'>0 diamanter</span></p>

  <div>
    <label for='ds-sort-by' class='tw-sr-only'>Sortera efter</label>
    <select
      id='ds-sort-by'
      name='ds-sort-by'
      class='tw-block tw-w-full tw-pl-3 tw-pr-2 tw-py-2 tw-text-base tw-border tw-border-gray-200 focus:tw-outline-none focus:tw-border-gray-400 tw-rounded-md'
    >
      <option value='Price: low to high'>Pris: låg till hög</option>
      <option value='Price: high to low'>Pris: hög till låg</option>
      <option value='Carat: low to high'>Carat: låg till hög</option>
      <option value='Carat: high to low'>Carat: hög till låg</option>
    </select>
  </div>
</div>

<!-- Initial Loading Spinner (only shows on first load) -->
<div id='diamond-initial-loading' class='tw-flex tw-items-center tw-justify-center tw-py-20'>
  <svg
    xmlns='http://www.w3.org/2000/svg'
    width='18'
    height='18'
    viewBox='0 0 24 24'
    fill='none'
    stroke='currentColor'
    stroke-width='2'
    stroke-linecap='round'
    stroke-linejoin='round'
    class='tw-animate-spin tw-mr-3'
  >
    <path d="M21 12a9 9 0 1 1-6.219-8.56"/>
  </svg>
  <span class='tw-text-gray-600 tw-text-2xl'>Hämtar diamanter...</span>

  <noscript>
    <style>
      #diamond-initial-loading > div:first-child {
        display: none !important;
      }
    </style>
    <div class='tw-text-center tw-text-red-600'>
      JavaScript krävs för att visa diamanter. Vänligen aktivera JavaScript i din webbläsare.
    </div>
  </noscript>
</div>

<div id='diamond-grid-area' class='tw-transition-opacity tw-duration-300 tw-hidden'>
  <!-- Products will be dynamically inserted here by renderDiamonds -->
</div>
